# ARRAY 

mahasiswa_list = ["Ana", "Cia", "Mute", "Jere", "Leha"]

print("Daftar Nama Mahasiswa:", mahasiswa_list)

# Mengakses 
print("Mahasiswa pertama:", mahasiswa_list[0])

# Menambah 
mahasiswa_list.append("Ardan")
print("Setelah menambah Ardan:", mahasiswa_list)

# Menghapus 
mahasiswa_list.remove("Mute")
print("Setelah menghapus Mute:", mahasiswa_list)

# DICTIONARY 

mahasiswa = {
    "nama": "Kristia Aura Juvita",
    "nim": "D0425322",
    "jurusan": "Sistem Informasi",
    "kelas": "Sisfo A",
    "angkatan": 2025,
    "alamat": "Mamasa, Sulawesi Barat",

    "nilai": {
        "algoritma_pemrograman": 99,
        "struktur_data": 89,
        "basis_data": 95,
        "pemrograman_python": 97
    },

    "mata_kuliah_diambil": [
        "Algoritma Pemrograman",
        "Basis Data",
        "Pemrograman Python",
        "Kalkulus Informatika"
    ]
}

# Menampilkan data
print("\nData Mahasiswa:", mahasiswa)

# Mengakses data
print("Nama:", mahasiswa["nama"])
print("Kelas:", mahasiswa["kelas"])
print("Nilai Python:", mahasiswa["nilai"]["pemrograman_python"])

# Update nilai
mahasiswa["nilai"]["pemrograman_python"] = 99
print("Nilai Python Setelah Update:", mahasiswa["nilai"]["pemrograman_python"])

# Menambah data baru
mahasiswa["status"] = "Aktif"
print("Setelah menambah status:", mahasiswa)
